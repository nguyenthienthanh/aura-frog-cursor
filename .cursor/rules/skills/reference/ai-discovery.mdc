        <span>
          Accurate as of: {article.accuracyDate}
          {article.framework && ` (${article.framework} ${article.frameworkVersion})`}
        </span>
      </div>
    </header>
  );
}
```

### 6. Semantic HTML for AI Parsing

```tsx
// Semantic structure that AI can parse easily
export function TechnicalArticle({ content }: { content: TechArticle }) {
  return (
    <article itemScope itemType="https://schema.org/TechArticle">
      <header>
        <h1 itemProp="headline">{content.title}</h1>
        <p itemProp="description" className="lead">
          {content.summary}
        </p>
      </header>

      {/* Key takeaways - often extracted by AI */}
      <aside className="key-points" aria-label="Key Takeaways">
        <h2>Key Takeaways</h2>
        <ul>
          {content.keyPoints.map((point, i) => (
            <li key={i}>{point}</li>
          ))}
        </ul>
      </aside>

      {/* Table of contents - helps AI understand structure */}
      <nav aria-label="Table of Contents">
        <h2>Contents</h2>
        <ol>
          {content.sections.map((section) => (
            <li key={section.id}>
              <a href={`#${section.id}`}>{section.title}</a>
            </li>
          ))}
        </ol>
      </nav>

      {/* Main content with clear sections */}
      <div itemProp="articleBody">
        {content.sections.map((section) => (
          <section key={section.id} id={section.id}>
            <h2>{section.title}</h2>
            {section.content}

            {/* Code examples with language specified */}
            {section.code && (
              <pre>
                <code className={`language-${section.codeLanguage}`}>
                  {section.code}
                </code>
              </pre>
            )}
          </section>
        ))}
      </div>

      {/* Sources - critical for AI citations */}
      <footer>
        <section aria-label="Sources and References">
          <h2>Sources</h2>
          <ol className="references">
            {content.sources.map((source, i) => (
              <li key={i}>
                <cite>
                  <a href={source.url} rel="noopener">
                    {source.title}
                  </a>
                </cite>
                {source.author && ` by ${source.author}`}
                {source.date && ` (${source.date})`}
              </li>
            ))}
          </ol>
        </section>
      </footer>
    </article>
  );
}
```

